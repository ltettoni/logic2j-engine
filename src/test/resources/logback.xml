<?xml version="1.0" encoding="UTF-8" ?>
<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%05relative %-5level %msg%n</pattern>
            <!--
            <pattern>%-26thread\t%05relative\t%-5level %msg%n</pattern>
            -->
        </encoder>
    </appender>

    <logger name="org.logic2j" level="info"/>
    <root level="warn">
        <appender-ref ref="STDOUT"/>
    </root>

</configuration>